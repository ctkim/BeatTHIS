<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/red"
                android:endColor="@color/light_red"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/navy" />
            <corners
                android:radius="5dp" />
            <padding
                android:left="20dp"
                android:top="20dp"
                android:right="20dp"
                android:bottom="20dp" />
        </shape>
    </item>

